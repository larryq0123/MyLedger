<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">
    <TextView
        android:id="@+id/tagDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.1"
        android:text="日期" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tagDate"
        app:layout_constraintBottom_toBottomOf="@id/tagDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="2018-12-28"
        android:textColor="@color/white"
        android:background="@drawable/shape_simple_button_down"
        android:paddingTop="@dimen/tiny_padding"
        android:paddingBottom="@dimen/tiny_padding"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"/>

    <TextView
        android:id="@+id/tagType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tagDate"
        app:layout_constraintVertical_bias="0.15"
        android:text="類型"/>

    <TextView
        android:id="@+id/textExpType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tagType"
        app:layout_constraintLeft_toLeftOf="@id/textDate"
        android:text="支出"
        android:textColor="@color/red" />

    <ImageView
        android:id="@+id/imageChangeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_change"
        app:layout_constraintTop_toTopOf="@id/tagType"
        app:layout_constraintBottom_toBottomOf="@id/tagType"
        app:layout_constraintLeft_toRightOf="@+id/textExpType"
        android:layout_marginLeft="@dimen/large_padding"
        app:tint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tagCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tagDate"
        app:layout_constraintVertical_bias="0.25"
        android:text="分類"/>

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        app:layout_constraintTop_toTopOf="@id/tagCategory"
        app:layout_constraintBottom_toBottomOf="@+id/tagCategory"
        app:layout_constraintLeft_toLeftOf="@+id/textDate"/>

    <TextView
        android:id="@+id/tagAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tagDate"
        app:layout_constraintVertical_bias="0.35"
        android:text="金額"/>

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tagAmount"
        app:layout_constraintBottom_toBottomOf="@id/tagAmount"
        app:layout_constraintLeft_toLeftOf="@id/textDate"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/xxxxlarge_padding"
        android:background="@drawable/button_orange_stroke"
        android:hint="請輸入金額"
        android:padding="@dimen/tiny_padding"
        android:textSize="@dimen/medium_text_size"
        android:inputType="number"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tagComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tagDate"
        app:layout_constraintVertical_bias="0.45"
        android:text="備註"/>

    <EditText
        android:id="@+id/editComment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tagComment"
        app:layout_constraintLeft_toLeftOf="@id/textDate"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/xxxxlarge_padding"
        app:layout_constraintDimensionRatio="2.5"
        android:background="@drawable/button_orange_stroke"
        android:hint="寫點備註吧"
        android:textSize="@dimen/medium_text_size"
        android:gravity="top"
        android:padding="@dimen/tiny_padding"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/buttonOneMore"
        app:layout_constraintRight_toRightOf="@id/buttonOneMore"
        app:layout_constraintBottom_toTopOf="@id/buttonOneMore"
        app:layout_constraintVertical_bias="0.8"
        android:text="儲存"/>

    <Button
        android:id="@+id/buttonOneMore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:text="再記一筆"/>
</androidx.constraintlayout.widget.ConstraintLayout>